# Copy this file to .env and update the placeholders before running TaskAgent locally.
# Required Feishu app credentials.
FEISHU_APP_ID=cli_your_app_id
FEISHU_APP_SECRET=your_app_secret

# Optional tenant- and domain-scoped settings.
FEISHU_TENANT_KEY=
FEISHU_BASE_URL=https://open.feishu.cn

# Toggle live integration tests that touch real Bitables (set to 1 to enable).
FEISHU_LIVE_TEST=0

# Bitables for task management (used by TaskAgent)
# 剧单详情表
DRAMA_BITABLE_URL=https://bytedance.larkoffice.com/wiki/xxx
DRAMA_FIELD_NAME=短剧名称
DRAMA_FIELD_DURATION=全剧时长（分）

# 任务状态表
TASK_BITABLE_URL=https://bytedance.larkoffice.com/wiki/xxx
TASK_FIELD_PARAMS=Params

# 采集结果表
RESULT_BITABLE_URL=https://bytedance.larkoffice.com/wiki/xxx
RESULT_FIELD_PARAMS=Params
RESULT_FIELD_USERID=UserID
RESULT_FIELD_DURATION=ItemDuration

# 结果推送表
WEBHOOK_BITABLE_URL=https://bytedance.larkoffice.com/wiki/xxx

# 设备状态表
DEVICE_BITABLE_URL=https://bytedance.larkoffice.com/wiki/xxx

# Optional: restrict the local device pool to a comma-separated list of device serials.
# When unset/empty, all connected devices are eligible.
# DEVICE_ALLOWLIST=device-A,device-B

# Piracy Detection Configuration
# ===============================
# Piracy threshold ratio (0-1), default is 0.5 (50%)
# A Params+UserID combo is flagged if: (captured duration) / (total duration) > THRESHOLD
THRESHOLD=0.5

# 飞书上报频率限制
FEISHU_REPORT_RPS=10

# webhook
SUMMARY_WEBHOOK_URL=""
VEDEM_DRAMA_AK=""
VEDEM_DRAMA_SK=""
